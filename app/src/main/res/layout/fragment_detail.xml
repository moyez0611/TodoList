<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="20dp"
       >
      <ImageView
          android:id="@+id/image_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:src="@drawable/ic_edit"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:tint="@color/purple_500" />
      <TextView
          android:id="@+id/label_task"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Tugas"
          android:textSize="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/image_edit"
          app:layout_constraintTop_toTopOf="parent"
          android:gravity="start|center"
          />
      <TextView
          android:id="@+id/text_task"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Tugas"
          android:textColor="@color/black"
          android:layout_marginTop="5dp"
          android:drawableStart="@drawable/ic_task"
          android:drawableTint="@color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/image_edit"
          app:layout_constraintTop_toBottomOf="@id/label_task"
          android:gravity="start|center"
          />
      <TextView
          android:id="@+id/label_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Tanggal"
          android:textSize="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/text_task"
          android:gravity="start|center"
          />
      <TextView
          android:id="@+id/text_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="00/00/0000"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:layout_marginTop="5dp"
          android:drawableStart="@drawable/ic_date"
          android:drawableTint="@color/black"
          android:gravity="start|center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/label_date"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>